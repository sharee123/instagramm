<h1> Your posts</h1>
<div id =pic_show class="row">
	<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class ="panel heading pic_image">
				<%=image_tag @pic.image.url%>
				</div>
				<div class="panel-body">
				<h2><%=@pic.title%></h2>
				<p><%=@pic.description%></p>
				</div>
				<div class="panel-footer">
					<div class="row">
						<div class="col-sm-6">
						<p>by: <%=@pic.user.email%></p>
						</div>
					<div class="col-sm-6">
						<div class="btn-group pull-right btn">
						<%=link_to like_pic_path(@pic), method: :put, class: "btn-btn-default button2" do %>
						<span class="glyphicon glyphicon-thumbs-up">
							<%=@pic.get_upvotes.size%>
						</span>
						<%end%>

						<%if user_signed_in?%>
						<%=link_to "edit", edit_pic_path, class: "button"%>
						<%= link_to "delete",pic_path, method: :delete, data:{ confirm: "are you sure??"}, class: "button1"%>
						<%end%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>