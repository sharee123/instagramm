	<!DOCTYPE html>
<html>
  <head>
    <title>Instagramm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-inverse">
      <div class="container">
          <div class="navbar-brand">
          <%=link_to "INSTAGRAM" ,root_path%>
          </div>
          <% if user_signed_in?%>
          <ul class="nav navbar-nav navbar-left">
            <li><%=link_to "Add your new post" ,new_pic_path%></li>
            <li><%=link_to "settings",edit_user_registration_path%></li>
            <li><%=link_to "signout",destroy_user_session_path, method: :delete%></li>
          </ul>
          <%else%>
          <ul class="nav navbar-nav navbar-left">
            <li><%=link_to "join Us",new_user_registration_path%></li>
            <li><%=link_to "Login",new_user_session_path%></li>
          </ul>
        <%end%>
      </div>  
    </div>
    <% flash.each do |name,msg|%>
      <%= content_tag :div,msg, class: "alert alert-info"%>
    <%end%>
    <%= yield %>
  </body>
</html>
